{
    "manifest_version": 3,
    "name": "JobAI - LinkedIn Assistant",
    "version": "1.1",
    "description": "Extract job posts from LinkedIn and send to JobAI",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "http://localhost:3000/*",
        "http://localhost:3001/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "JobAI Assistant"
    }
}